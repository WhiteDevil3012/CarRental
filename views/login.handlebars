<style>
  body {
  background-color: #328f8a;
  background-image: linear-gradient(45deg, #328f8a, #08ac4b);
  font-family: "Roboto", sans-serif;
}

</style>

  <div class="login-page">
      {{#each success}}
        
      <div class="alert alert-success alert-dismissible fade show">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>{{text}}
      </div>
      {{/each}}
      {{#each errors}}
      <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>{{text}}
      </div>
    {{/each}}
        <div class="form">
          <div class="login">
            <div class="login-header">
              <h3>LOGIN</h3>
              <p>Please enter your credentials to login.</p>
            </div>
          </div>
          <form class="login-form" action='/loginform' method="POST">
            <input type="text" name="email" id="email" value="{{email}}" placeholder="Email id"/>
            <input type="password" name="password" id="password" value="{{password}}" placeholder="Password"/>
            <button>LOGIN</button>
            <p class="message">Not registered? <a href="/signup">Create an account</a></p>
          </form>
        </div>
      </div>