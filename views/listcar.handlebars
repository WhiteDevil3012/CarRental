<div class="body">
    
<div class="login-page">
      <div class="form">
        <div class="login">
          <div class="login-header">
            <h3>List your car</h3>
          </div>
        </div>
        <form class="login-form" method="POST" action="/tariff">
          <input type="text" name="regno" id="regno" placeholder="Vehicle Registration No" value="{{regno}}"/>
          <input type="text" name="model" id="model" placeholder="Model" value="{{model}}"/>
          <input type="text" name="make" id="make" placeholder="Make" value="{{make}}"/>
          <input type="number" name="year" id="year" placeholder="Year" value="{{year}}"/>
          <select name="type" id="type">
            <option value="Economy">Economy</option>
            <option value="Luxury">Luxury</option>
            <option value="SUV">SUV</option>
          </select>
          <input type="text" name="location" id="location" placeholder="Street,city,state" value="{{location}}"/>
          <button>Submit</button>
        </form>
      </div>
    </div>
</div>
<script type="text/javascript">
function fetchLocation()
{
    var location=document.getElementById('location');
    var Autocomplete = new google.maps.places.Autocomplete(location);
}
//Jquery
$(document).ready(function(){
    $('.upload-btn').on('click',function(){
        $('#upload-ip').click();
    });
    $('#upload-ip').on('change',function(){
        var uploadip = $('#upload-ip');
        if(uploadip.val() != ''){
            var formData = new FormData();
            formData.append('image',uploadip[0].files[0]);

            $.ajax({
                url: '/uploadImage',
                type: 'POST',
                data : formData,
                processData : false,
                contentType: false,
                success : function(){
                    uploadip.val('');
                }
            })
        }
    })
})
window.onload = function(){
    if(window.jQuery) {
    }
    else
        alert('Jquery not loaded. Please reload the page');
}
</script>
